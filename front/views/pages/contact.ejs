<header>
    <link rel="stylesheet" href="<%=process.env.SITE_URL%>/assets/style/contact.css">
    <script type="module" src="<%=process.env.SITE_URL%>/assets/js/contact.js"></script>
</header>


<%- include('../partials/header', { title: 'contact' }) %>
<main>
    <section id="contact-form">
        <h1>Contactez-nous !</h1>
        <form id="form-contact" novalidate>
            <div class="form-group">
                <label for="name">
                    Nom :
                </label>
                <div class="input-wrapper">
                    <input type="text" id="name" name="name" autofocus>
                    <i class="validation-icon"></i>
                </div>
                <span class="error" id="error-name"></span>
            </div>

            <div class="form-group">
                <label for="email">
                    Email :
                </label>
                <div class="input-wrapper">
                    <input type="email" id="email" name="email">
                    <i class="validation-icon"></i>
                </div>
                <span class="error" id="error-email"></span>
            </div>

            <div class="form-group">
                <label for="subject">
                    Objet :
                </label>
                <div class="input-wrapper">
                    <input type="text" id="subject" name="subject">
                    <i class="validation-icon"></i>
                </div>
                <span class="error" id="error-subject"></span>
            </div>

            <div class="form-group">
                <label for="message">
                    Message :
                </label>
                <div class="input-wrapper">
                    <textarea id="message"></textarea>
                    <i class="validation-icon"></i>
                </div>
                <span class="error" id="error-message"></span>
            </div>
            <button type="submit" class="submit">Envoyer</button>
        </form>
        <div id="response-message"></div>
    </section>
</main>
</html>
<%- include('../partials/footer') %>

